.single-container
  = render partial:"devise/header"

  %main.single-main
    %section.l-single-container
      %h2.l-single-head.registration 支払い方法
      = form_tag(card_index_path, method: :post, id: 'charge-form',class: 'l-single-inner registration-form', name: "inputForm") do

        .l-single-content
          .form-group
            %label カード番号
            %span.form-require 必須
            = text_field_tag "number", "", class:'input-default number', placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            %br
            %br.card-box
              = link_to '', class: 'card-box' do
                =image_tag 'visa3.jpg', alt: 'visa-box', height: '20', width: '30', class: ''
                =image_tag 'img-credit_1.jpg', alt: 'master-card', height: '20', width: '30', class: ''
                =image_tag '1024px-Saison_card_logo.svg.png', alt: 'saison-card', height: '20', width: '30', class: ''
                =image_tag 'jcb-logomark-img-01.gif', alt: 'jcb-card', height: '20', width: '30', class: ''
                =image_tag 'amex-logomark-img-04.gif', alt: 'americanexpress-card', height: '20', width: '30', class: ''
                =image_tag 'diners-logomark-img-01.gif', alt: 'diners-card', height: '20', width: '30', class: ''
                =image_tag 'discover-logomark-img-08.gif', alt: 'discover-card', height: '20', width: '30', class: ''

            .form-group.limit
              %label 有効期限
              %span.form-require 必須

            .form-group.limit-date
              %select#exp_month{name: "exp_month", type: "text", class: "input-default"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span.form-signup 月

              %select#exp_year{name: "exp_year", type: "text",class: "input-default"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span.form-signup 年

            .form-group.securty
              %label セキュリティコード
              %span.form-require 必須
              = text_field_tag "cvc", "", class: "input-default cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              %br.text-right
              = link_to '', class: 'security_code text-right', target: "_blank"
              カード裏面の番号とは？

            #card_token
            = submit_tag "登録する", id: "token_submit", class: "btn-default btn-red"

  = render partial:"devise/footer"

