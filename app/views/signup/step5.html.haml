.single-container
  = render partial:"devise/header"

  %nav.progress-bar.signup-bar
    %ol.clearfix
      %li.through
        会員登録
        %div.progress-status
      %li.through
        電話番号認証
        %div.progress-status
      %li.through
        お届け先住所入力
        %div.progress-status
      %li.through
        支払い方法
        %div.progress-status
      %li.active
        完了
        %div.progress-status

  %main.single-main
    %section.l-single-container
      %h2.l-single-head.registration 会員登録完了
      = form_with model: @user, url: signup_index_path, class: 'l-single-inner registration-form', local: true do |f|
        %input{type: "hidden", name: "__csrf_value", value:""}
        
        .l-single-content
          .form-group
          %p.comment ありがとうございます。
          %p.comment 会員登録が完了しました。
          = link_to 'メルカリを始める', root_path, class:'btn-default btn-red'
      = render partial:"shared/aside"
  = render partial:"devise/footer"