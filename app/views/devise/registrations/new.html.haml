.single-container

  = render partial:"devise/header"
  
  %main.single-main
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %section.l-single-container
        %h2.l-single-head.registration 新規会員登録
        .l-single-inner.registration-form
          .l-single-content
            = link_to'/signup/step1', class: 'btn-default',id: 'btn-mail'  do
              = fa_icon "envelope"
              メールアドレスで登録する
            = link_to user_facebook_omniauth_authorize_path,  method: :post, class: 'btn-default btn-sns btn-sns-facebook' do
              = fa_icon "facebook-square"
              Facebookで登録する

            -# %button{id: "google-login", class: "btn-default btn-sns btn-sns-google" }
            = link_to'/users/auth/google_oauth2', method: :post, class: 'btn-default btn-sns btn-sns-google', id: "google-login" do
              =image_tag '/google.svg', alt: '', height: '45', width: '60',class: "google-logo"
              %span.google Googleで登録する

  = render partial:"devise/footer"
