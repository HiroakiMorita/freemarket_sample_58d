    
.header
  .header-_box
    .header-_box__top
      %h1.header-_box__top__logo
        = link_to root_path do
          .header-_box__top__logo__link
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3270184656", size: "134x36", alt: "メルカリロゴ", class: "header-_box__top__link__image"

    .header-_box__nav
      .header-_box__nav__left
        %ul.header-_box__nav__left__content
          %li.header-_box__nav__left__content__list
            %h2.header-_box__nav__left__content__list__heading
              =link_to "#" do
                .header-_box__nav__left__content__list__heading__link 
                  %i.header-_box__nav__left__content__list__heading__link__icon.fas.fa-list-ul
                  %span.header-_box__nav__left__content__list__heading__link__text カテゴリーから探す
          %li.header-_box__nav__left__content__list
            %h2.header-_box__nav__left__content__list__heading
              =link_to "#" do
                .header-_box__nav__left__content__list__heading__link
                  %i.header-_box__nav__left__content__list__heading__link__icon.far.fa-tag
                  %span.header-_box__nav__left__content__list__heading__link__text ブランドから探す
      .header-_box__nav__right
        %li.header-_box__nav__right__content__list
          =link_to "/users/sign_up" do
            .header-_box__nav__right__content__list__link
              .header-_box__nav__right__content__list__link--text-red 新規会員登録
        %li.header-_box__nav__right__content__list
          =link_to "/users/sign_in" do
            .header-_box__nav__right__content__list__link
              .header-_box__nav__right__content__list__link--text-blue ログイン
