    
.header
  .header__box
    .header__box__top
      %h1.header__box__top__logo
        = link_to root_path do
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3270184656", size: "134x36", alt: "メルカリロゴ", class: "header__box__top__link__image"
      = form_with url: root_path, method: :get, local: true do |f|
        = f.text_field :keyword, class: 'form__search', placeholder: 'お探しですか？',name: 'keyword',type:'search'
        %label.search-label{for: "search-icon"}
          %i.fa.fa-search
          = f.submit '', id: "search-icon"
            
    .header__box__nav
      .header__box__nav__left
        %ul.menu
          %li
            = render partial: 'shared/category_drop'

        - if user_signed_in?
          .header__box__nav__right
            %li.header__box__nav__right__content__list
              =link_to "/mypage" do
                .header__box__nav__right__content__list__link
                  .header__box__nav__right__content__list__mypagelist いいね！一覧
                  .header__box__nav__right__content__list__mypagelist お知らせ
                  .header__box__nav__right__content__list__mypagelist やることリスト
                  .header__box__nav__right__content__list__mypagelist マイページ
        - else
          %ul.input
            %li
              = link_to '新規会員登録', '/users/sign_up', class: 'new-create-user'
            %li
              = link_to 'ログイン', '/users/sign_in', class: 'login-user-box'
